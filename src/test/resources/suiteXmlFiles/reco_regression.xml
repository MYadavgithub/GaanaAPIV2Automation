<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Reco Regression Test Suite" verbose="1" parallel="tests" thread-count="1" configfailurepolicy="continue">

    <listeners>
		<listener class-name="utils.ExtentManagerListener" />
		<listener class-name="utils.EmailableReportListener" />
		<listener class-name="utils.RetryTransformListener" />
		<listener class-name="utils.AllureListener" />
	</listeners>
	
	<test name="Recommended Track List" annotations="JDK" preserve-order="true">

		<classes>
			<class name="recomendation.reco_tracks.RecomendedTracks" />
		</classes>

	</test>

	<test name="Search Feed" annotations="JDK" preserve-order="true">

		<classes>
			<class name="recomendation.reco_tracks.SearchFeed" />
		</classes>

	</test>

	<test name="Recommended MoodMix" annotations="JDK" preserve-order="true">

		<classes>
			<class name="recomendation.v2.MoodMix" />
		</classes>

	</test>

	<test name="Recommended MadeForYou" annotations="JDK" preserve-order="true">

		<classes>
			<class name="recomendation.v2.MadeForYou" />
		</classes>

	</test>

	<test name="Recommended DeviceConsumedLanguage" annotations="JDK" preserve-order="true">

		<classes>
			<class name="recomendation.v2.DeviceConsumedLanguage" />
		</classes>

	</test>

	<test name="Vibes Api Initial" annotations="JDK" preserve-order="true">

		<parameter name = "id" value="0"/> 

		<classes>
			<class name="recomendation.reco_tracks.Vibes" />
		</classes>

	</test>

	<test name="Vibes Api Second" annotations="JDK" preserve-order="true">

		<parameter name = "id" value= "1"/> 

		<classes>
			<class name="recomendation.reco_tracks.Vibes" />
		</classes>

	</test>

	<test name="Recommended TrendingShortTrack" annotations="JDK" preserve-order="true">

		<classes>
			<class name="recomendation.reco_tracks.TrendingShortTrack" />
		</classes>

	</test>

	<test name="Recommended SimilarArtists" annotations="JDK" preserve-order="true">

		<classes>
			<class name="recomendation.artist.SimilarArtists" />
		</classes>

	</test>

	<test name="Recommended SimilarArtistEntityInfo" annotations="JDK" preserve-order="true">

		<classes>
			<class name="recomendation.artist.SimilarArtistEntityInfo" />
		</classes>

	</test>

	<test name="Recommended HashTagVibes" annotations="JDK" preserve-order="true">

		<classes>
			<class name="recomendation.vibes.HashTagVibes" />
		</classes>

	</test>

</suite>